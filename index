            const jgId = await createUniqueUserId(name);
            const profileData = { name, emoji, jgId, email: currentUser.email, contacts: {}, blocked: {} };
            db.ref(`users/${currentUser.uid}`).set(profileData).then(() => showModal('profile-setup-modal', false));
        });
        
        function initializeApp() {
            listenForContacts(); listenForFriendRequests(); listenForIncomingCalls(); listenForUnreadMessages(); renderCallLogs();
            localVideoCanvas = document.getElementById('local-video-canvas');
